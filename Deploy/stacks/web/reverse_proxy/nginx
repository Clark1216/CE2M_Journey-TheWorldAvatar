/var/log/nginx/concrete-access.log {
        hourly
        missingok
        rotate 90
        notifempty
		dateext
		dateformat .%Y-%m-%d
		extension .log
        create 640 nginx adm
		olddir /var/log/nginx/store
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}
