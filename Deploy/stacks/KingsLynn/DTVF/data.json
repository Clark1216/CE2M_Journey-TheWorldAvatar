{
    "name": "All Data",
    "stack": "http://165.232.172.16:3838/KINGS-LYNN",
    "groups": [
        {
            "name": "Buildings",
            "sources": [
                {
                    "id": "area-of-interest",
                    "type": "geojson",
                    "data": "data/aoi.geojson", 
                    "generateId": true
                },
                {
                    "id": "obe_buildings",  
                    "type": "vector",
                    "tiles": [
                        "http://165.232.172.16:3838/geoserver/ows?service=WMS&version=1.1.0&request=GetMap&layers=buildings:buildings&bbox={bbox-epsg-3857}&width=256&height=256&srs=EPSG:3857&format=application/vnd.mapbox-vector-tile"
                    ]
                }
            ], 
            "layers": [
                {
                    "id": "aoi-layer",
                    "name": "This layer is the area of interest and has a long name", 
                    "source": "area-of-interest",
                    "type": "circle",
                    "treeable": false,
                    "maxzoom": 8,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 4, 25, 8, 100],
                        "circle-opacity": 0.25,
                        "circle-color": "#000000",
                        "circle-stroke-width": 0
                    }
                },
                {
                    "id": "obe_buildings-layer",
                    "name": "Buildings with EPC information",
                    "source": "obe_buildings",
                    "source-layer": "buildings",
                    "type": "fill-extrusion",
                    "minzoom": 8, 
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "fill-extrusion-color": "#000000",
                        "fill-extrusion-opacity": 0.4,
                        "fill-extrusion-base": 0,
                        "fill-extrusion-height": [
                            "case",
                            ["has", "building height"],
                            ["to-number", ["get", "building height"]],
                            8
                        ]
                    }
                },
                {
                    "id": "buildings-outline-layer",
                    "name": "Buildings",
                    "source": "obe_buildings",
                    "type": "line",
                    "minzoom": 8, 
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "line-color": "#000000",
                        "line-opacity": 0.6
                    }
                },
                {
                    "id": "colleges-layer",
                    "name": "Colleges",
                    "source": "colleges",
                    "type": "symbol",
                    "filter": ["!", ["has", "point_count"]],
                    "minzoom": 8, 
                    "layout": {
                        "visibility": "visible",
                        "icon-image": ["get", "icon-image"],
                        "icon-size": ["interpolate", ["linear"], ["zoom"], 12, 0.25, 20, 0.5],
                        "icon-allow-overlap": true,
                        "icon-ignore-placement": true
                    }
                }
            ]
        }
    ]
}