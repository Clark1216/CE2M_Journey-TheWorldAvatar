<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.multipart.maxSize" value="1000000000" />
	
<package name="default" namespace="/" extends="struts-default">
	 
 <action name="upload" class="uk.ac.ceb.como.molhub.action.UploadAction" method="execute">

     <interceptor-ref name="defaultStack">
        <param name="fileUpload.maximumSize">1048576</param>     
    </interceptor-ref>

     <result name="input">/upload.jsp</result>
     <result name="error">/upload.jsp</result>
         
    </action>
      
   <action name="search" class="uk.ac.ceb.como.molhub.action.TermValidationAction" method="execute">
    
    <result name="success">/search.jsp</result>
	<result name="input">/search.jsp</result>
	<result name="error">/search.jsp</result>
	 
    <interceptor-ref name="basicStack"/>
    <interceptor-ref name="scope">
        <param name="type">start</param>
    </interceptor-ref>
      
   </action>
   
   <action name="calculation" class="uk.ac.ceb.como.molhub.action.CalculationAction" method="execute">  
    
       <result name="success">/search.jsp</result>
       <result name="input">/search.jsp</result>
	   <result name="error">/search.jsp</result>   
    
    <interceptor-ref name="scope">
        <param name="type">end</param>
    </interceptor-ref>
    <interceptor-ref name="basicStack"/>
    
    </action>
    	
   
   </package>
        
</struts>