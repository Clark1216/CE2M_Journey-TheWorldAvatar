{
"numerical_settings":{
	"seed": 1
},
"dataset":{
	"src": "./data/product/amazon.pkl",
	"tgt": "./data/product/googleproducts.pkl"
},
"pre_processing":{
	"add_knowledge": null
},
"blocking":{
	"name": "TokenBasedPairIterator",
	"model_specific": {
		"min_token_length": 3,
		"max_token_occurrences_src": 20,
		"max_token_occurrences_tgt": 20,
		"blocking_properties": ["https://schema.org/name", "https://schema.org/manufacturer"],
		"reset_index": false
	}
},
"mapping": {
	"mode": "fixed",
	"similarity_functions": [
		{"name": "dist_nltk_edit", "cut_off_mode": "fixed", "cut_off_value": 3},
		{"name": "dist_absolute", "cut_off_mode": "fixed", "cut_off_value": 10},
		{"name": "dist_relative", "cut_off_mode": "fixed", "cut_off_value": 1},
		{"name": "dist_equal", "cut_off_mode": "fixed", "cut_off_value": 1},
		{"name": "dist_cosine_with_tfidf", "cut_off_mode": "fixed", "cut_off_value": 1},
		{"name": "dist_cosine_binary", "cut_off_mode": "fixed", "cut_off_value": 1}
	],
	"triples": [
		{"prop1": "https://schema.org/name", "prop2": "https://schema.org/name", "sim": 4},
		{"prop1": "https://schema.org/manufacturer", "prop2": "https://schema.org/manufacturer", "sim": 0},
		{"prop1": "https://schema.org/description", "prop2": "https://schema.org/description", "sim": 4},
		{"prop1": "offers/price", "prop2": "offers/price", "sim": 2}
	]
},
"matching":{
	"name": "instancematching.InstanceMatcherWithAutoCalibration",
	"model_specific": {
		"symmetric": true
	}
},
"training":{
	"match_train_size": 0.2,
	"nonmatch_ratio": 1,
	"train_file": null,
	"cross_validation": 5
},
"classification":{
	"name": "XGB",
	"model_specific":{
		"n_estimators": [16, 32, 64, 128],
		"max_depth": [2,4,8],
		"learning_rate": [0.5, 0.1, 0.3, 0.5],
		"scale_pos_weight": null
	}
},
"post_processing":{
	"dump": "./scores",
	"evaluation_file": "./data/product/matches_product.csv"
}
}