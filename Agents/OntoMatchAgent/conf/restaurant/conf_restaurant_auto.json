{
"numerical_settings":{
	"seed": 1
},
"dataset":{
	"src": "./data/restaurant/zagats.pkl",
	"tgt": "./data/restaurant/fodors.pkl"
},
"pre_processing":{
	"add_knowledge": null
},
"blocking":{
	"name": "TokenBasedPairIterator",
	"model_specific": {
		"min_token_length": 3,
		"max_token_occurrences_src": 20,
		"max_token_occurrences_tgt": 20,
		"blocking_properties": ["name", "address/streetAddress"],
		"reset_index": false
	}
},
"mapping": {
	"mode": "fixed",
	"similarity_functions": [
		{"name": "dist_nltk_edit", "cut_off_mode": "fixed", "cut_off_value": 3},
		{"name": "dist_absolute", "cut_off_mode": "fixed", "cut_off_value": 10},
		{"name": "dist_relative", "cut_off_mode": "fixed", "cut_off_value": 1},
		{"name": "dist_equal", "cut_off_mode": "fixed", "cut_off_value": 1},
		{"name": "dist_cosine_with_tfidf", "cut_off_mode": "fixed", "cut_off_value": 1},
		{"name": "dist_cosine_binary", "cut_off_mode": "fixed", "cut_off_value": 1}
	],
	"triples": [
		{"prop1": "name", "prop2": "name", "sim": 4},
		{"prop1": "address/streetAddress", "prop2": "address/streetAddress", "sim": 4},
		{"prop1": "address/addressLocality", "prop2": "address/addressLocality", "sim": 0},
		{"prop1": "https://schema.org/servesCuisine", "prop2": "https://schema.org/servesCuisine", "sim": 0}
	]
},
"matching":{
	"name": "instancematching.InstanceMatcherWithAutoCalibration",
	"model_specific": {
	}
},
"classification":{
	"name": "XGB",
	"model_specific":{
		"n_estimators": [16, 32, 64, 128],
		"max_depth": [2,4,8],
		"learning_rate": [0.5, 0.1, 0.3, 0.5],
		"scale_pos_weight": null
	},
	"cross_validation": 5
},
"post_processing":{
	"dump": "./scores",
	"evaluation_file": "./data/restaurant/matches_restaurant.csv"
}
}