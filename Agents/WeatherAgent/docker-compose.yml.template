version: "3.8"

services:
  weatheragent:
    image: docker.cmclinnovations.com/weatheragent:1.0.0-SNAPSHOT
    deploy:
      mode: replicated
      replicas: 1
      restart_policy:
        condition: none
    environment:
      - STACK_NAME=${STACK_NAME}
      - API_KEY=21db8f6413957d7fdb6cfd98e05e03eb
      - LAYERNAME=weatherstations # also name of the table in PostGIS
      - DATABASE=postgres # currently ontop reads from the default database
      - GEOSERVER_WORKSPACE=weatherstations
    configs:
      - postgis
      - blazegraph
      - geoserver
      - ontop
    secrets:
      - postgis_password
      - geoserver_password
    ports:
      - "8086:8080"
    volumes:
      - logs:/root/.jps
    networks:
      - stack
volumes:
  logs:
    name: "logs"