    "version": "0.2.0",
    "configurations": [      
        {
            "name": "Debug (Python Remote Attach)",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "compose-deploy",
            "connect": {
                "host": "127.0.0.1",
                //"${config:debug.port}"
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/metoffice/flaskapp/",
                    "remoteRoot": "/app/metoffice/flaskapp/"
                }
            ]
        },
