{
    "ServiceSpec": {
        "Name": "isochroneagent",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "isochroneagent:1.0.0",
                "Env": [
                    "JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005"
                ],
                "Mounts": [
                  {
                    "Type": "bind",
                    "Source": "/home/common/Codes/TheWorldAvatar/Agents/IsochroneAgent/isochroneagent/src/main/resources",
                    "Target": "/usr/local/tomcat/data"
                  }
                ],
                "Configs": [
                    {
                        "ConfigName": "blazegraph"
                    },
                    {
                        "ConfigName": "postgis"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "postgis_password"
                    }
                ]
            }
        },
		"EndpointSpec": {
			"Ports": [
				{
                    "Name": "web",
                    "Protocol": "tcp",
					"TargetPort": "5005",
					"PublishedPort": "5005"
				}
			]
		}
    },
    "endpoints": {
        "isochroneagent": {
          "url": "http://localhost:8080/isochroneagent/",
          "externalPath": "/isochroneagent/"
        }
    }
}