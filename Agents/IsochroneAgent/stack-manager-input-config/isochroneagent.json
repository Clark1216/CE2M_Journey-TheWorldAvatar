{
    "ServiceSpec": {
        "Name": "isochroneagent",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "isochroneagent:1.0.0",
                "Mounts": [
                    {
                        "Type": "bind",
                        "Source": "/home/common/Codes/TheWorldAvatar/Agents/IsochroneAgent/isochroneagent/src/main/resources",
                        "Target": "/usr/local/tomcat/data"
                    }
                ],
                "Configs": [
                    {
                        "ConfigName": "blazegraph"
                    },
                    {
                        "ConfigName": "postgis"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "postgis_password"
                    }
                ]
            }
        }
    },
    "endpoints": {
        "isochroneagent": {
          "url": "http://localhost:8080/isochroneagent/",
          "externalPath": "/isochroneagent/"
        }
    }
}