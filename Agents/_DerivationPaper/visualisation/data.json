{
    "name": "All Data",
    "groups": [
        {
            "name": "Buildings",
            "sources": [
                {
                    "id": "area-of-interest",
                    "type": "geojson",
                    "data": "data/aoi.geojson", 
                    "generateId": true
                },
                {
                    "id": "buildings-affected",
                    "type": "geojson",
                    "data": "data/affected_buildings.geojson", 
                    "generateId": true
                },
                {
                    "id": "buildings-not-affected",
                    "type": "geojson",
                    "data": "data/not_affected_buildings.geojson", 
                    "generateId": true
                }
            ], 
            "layers": [
                {
                    "id": "aoi-layer",
                    "name": "Area of interest", 
                    "source": "area-of-interest",
                    "type": "circle",
                    "treeable": false,
                    "maxzoom": 10,
                    "order": 0,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 4, 25, 8, 100],
                        "circle-opacity": 0.25,
                        "circle-color": "#000000",
                        "circle-stroke-width": 0
                    }
                },
                {
                    "id": "buildings-affected-layer",
                    "name": "Buildings at risk of flooding", 
                    "source": "buildings-affected",
                    "type": "circle",
                    "minzoom": 12,
                    "order": 3,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 12, 2, 15, 10],
                        "circle-opacity": 1.0,
                        "circle-color": [
                            "interpolate", ["linear"],
                            ["number", ["get", "Property market value (Â£)"]],
                            10, "#E59A9B",
                            100, "#AD0709"
                        ]
                    }
                },
                {
                    "id": "buildings-not-affected-layer",
                    "name": "Other Buildings", 
                    "source": "buildings-not-affected",
                    "type": "circle",
                    "minzoom": 12,
                    "order": 2,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 12, 2, 15, 10],
                        "circle-opacity": 1.0,
                        "circle-color": "#000000"
                    }
                }
            ]
        },
        {
            "name": "Flood Warnings",
            "sources": [
                {
                    "id": "flood-warning",
                    "type": "geojson",
                    "data": "data/flood-areas.geojson", 
                    "generateId": true
                }
            ], 
            "layers": [
                {
                    "id": "flood-warning-layer",
                    "name": "Active flood warnings", 
                    "source": "flood-warning",
                    "type": "fill",
                    "order": 1,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "fill-color": "#0275C0",
                        "fill-opacity": 0.33,
                        "fill-outline-color": "#000000"
                    }
                }
            ]
        }
    ]
}