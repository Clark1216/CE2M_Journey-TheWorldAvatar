{
    "name": "All Data",
    "groups": [
        {
            "name": "Buildings",
            "sources": [
                {
                    "id": "area-of-interest",
                    "type": "geojson",
                    "data": "data/aoi.geojson", 
                    "generateId": true
                }
            ], 
            "layers": [
                {
                    "id": "aoi-layer",
                    "name": "Area of interest", 
                    "source": "area-of-interest",
                    "type": "circle",
                    "treeable": false,
                    "maxzoom": 10,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 4, 25, 8, 100],
                        "circle-opacity": 0.25,
                        "circle-color": "#000000",
                        "circle-stroke-width": 0
                    }
                }
            ]
        },
        {
            "name": "Flood Warnings",
            "sources": [
                {
                    "id": "flood-warning",
                    "type": "geojson",
                    "data": "data/flood-areas.geojson", 
                    "generateId": true
                }
            ], 
            "layers": [
                {
                    "id": "flood-warning-layer",
                    "name": "Active flood warnings", 
                    "source": "flood-warning",
                    "type": "fill",
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "fill-color": "#f2711b",
                        "fill-opacity": 0.33,
                        "fill-outline-color": "#000000"
                    }
                }
            ]
        }
    ]
}