<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="10dp"
    android:gravity="center|top|fill_vertical"
    android:orientation="vertical"
    tools:context=".LocationsActivity">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/parkings" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:gravity="center|fill_horizontal"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="143dp"
                    android:layout_height="176dp"
                    android:background="@null"
                    android:scaleType="fitStart"
                    android:src="@drawable/toilets" />

                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="176dp"
                    android:background="@null"
                    android:hapticFeedbackEnabled="true"
                    android:scaleType="fitEnd"
                    android:src="@drawable/worth_seeing" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/glass_container" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="116dp">

                <ImageButton
                    android:id="@+id/button6"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/drinking_water" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/local_shopping" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/entertainment" />

</LinearLayout>