block content
	style.
		body {
		font-family: "Lato", sans-serif;
		}
		.sidenav {
		height: 100%;
		width: 0;
		position: fixed;
		z-index: 1;
		top: 0;
		left: 0;
		background-color: #FFF;
		overflow-x: hidden;
		transition: 0.5s;
		padding-top: 60px;
		}
		.sidenav a {
		padding: 8px 8px 8px 32px;
		text-decoration: none;
		font-size: 25px;
		color: #818181;
		display: block;
		transition: 0.3s;
		}
		.sidenav a:hover {
		color: #f1f1f1;
		}
		.sidenav .closebtn {
		position: absolute;
		top: 0;
		right: 25px;
		font-size: 36px;
		margin-left: 50px;
		}
		@media screen and (max-height: 450px) {
		.sidenav {padding-top: 15px;}
		.sidenav a {font-size: 18px;}
		}
	#loader(style='display:none;')
	.panel.panel-default
		.panel-body
			input( id="toggle-event" type='checkbox', checked='', data-toggle='toggle', data-on='Single', data-off='Cluster')
	div#wrapper
		div.overlay-panel-wrapper
			div#overlay-setting-panel.panel.panel-default
				div.panel-body.container-fluid
					div#setting-panel-body
						div#text-panel(style='overflow-inline:scroll;')
						br
						button#run-btn.btn.btn-primary Run Simulation

						   
	div#map
	div#co2-sum-panel2
		table(style=" font-size:30px; margin-left:auto; margin-right:auto; padding:2px; and border-spacing:20px;")
