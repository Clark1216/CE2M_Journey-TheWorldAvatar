            "layers": [
                {
                    "id": "gb-countries-layer",
                    "name": "Countries",
                    "source": "gb-countries-source",
                    "source-layer": "countries_gb",
                    "type": "fill",
                    "clickable": false,
                    "layout": {
                        "visibility": "none"
                    },
                    "paint": {
                        "fill-color": "#000000",
