                        "fill-outline-color": "#000000"
                    }
                },
                {
                    "id": "ni-countries-layer",
                    "name": "Countries",
                    "source": "ni-countries-source",
                    "source-layer": "countries_ni",
                    "type": "fill",
                    "clickable": false,
                    "layout": {
                        "visibility": "none"
                    },
                    "paint": {
