                    }
                },
                {
                    "id": "gb-counties-layer",
                    "name": "Ceremoninal counties",
                    "source": "gb-counties-source",
                    "source-layer": "counties_gb",
                    "type": "fill",
                    "clickable": false,
                    "layout": {
