{
    "ServiceSpec": {
        "Name": "openmeteo-agent",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "ghcr.io/cambridge-cares/openmeteo-agent:1.0.0",
				"Env": [
					"JPDA_ADDRESS=0.0.0.0:5005",
					"JPDA_TRANSPORT=dt_socket",
					"DEBUG=ON"
				],
				"Configs": [
					{
						"ConfigName": "postgis"
					},
					{
						"ConfigName": "blazegraph"
					},
					{
						"ConfigName": "geoserver"
					},
					{
						"ConfigName": "ontop"
					}					
				],
				"Secrets": [
					{
						"SecretName": "postgis_password"
					},
					{
						"SecretName": "geoserver_password"
					}
				],
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "logs",
                        "Target": "/root/.jps"
                    }
                ]
            }
        },
	"EndpointSpec": {
		"Ports": [
			{
				"Name": "web",
				"Protocol": "tcp",
				"TargetPort": "5005",
				"PublishedPort": "5005"
			}
		]
	}
    },
    "endpoints": {
        "openmeteo-agent": {
            "url": "http://localhost:8080/OpenMeteoAgent/",
            "externalPath": "/openmeteo-agent/"
        }
    }
}