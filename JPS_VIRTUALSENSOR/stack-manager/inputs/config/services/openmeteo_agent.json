{
    "ServiceSpec": {
        "Name": "openmeteo_agent",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "ghcr.io/cambridge-cares/openmeteo_agent:1.0.0",
				"Env": [
					"LOG4J_FORMAT_MSG_NO_LOOKUPS=true"
				],
				"Configs": [
					{
						"ConfigName": "postgis"
					},
					{
						"ConfigName": "blazegraph"
					},
					{
						"ConfigName": "geoserver"
					},
					{
						"ConfigName": "ontop"
					}					
				],
				"Secrets": [
					{
						"SecretName": "postgis_password"
					},
					{
						"SecretName": "geoserver_password"
					}
				],
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "logs",
                        "Target": "/root/.jps"
                    }
                ]
            }
        }
    },
    "endpoints": {
        "openmeteo_agent": {
            "url": "http://localhost:8080/openmeteo_agent/",
            "externalPath": "/openmeteo_agent/"
        }
    }
}